+/**
+ * Attaches views display id to all form elements.
+ *
+ * @param array $form
+ *   The form or form element which children should have views display id
+ *   attached.
+ * @param $views_display_id
+ *   The views display id attached to form elements.
+ */
+function themable_forms_attach_views_display_id(array &$form, $views_display_id) {
+  foreach (Element::children($form) as $child) {
+    if (!isset($form[$child]['#views_display_id'])) {
+      $form[$child]['#views_display_id'] = $views_display_id;
+    }
+    themable_forms_attach_views_display_id($form[$child], $views_display_id);
+  }
